{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "exclude": [
    "./node_modules/**/*",
    "./coverage/**/*",
    "./types/**",
    "./app"
  ]
}
